{% extends 'baseuser.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="categories__item categories__large__item set-bg"
                data-setbg="{{category.0.image}}">
                <div class="categories__text">
                    <h1>{{category[0].nom}}</h1>
                    <a href="{{category.0.slug}}">Acheter</a>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                {% for item in category %}
                {% if loop.index >=2 %}
                <div class="col-lg-6 col-md-6 col-sm-6 p-0">
                    <div class="categories__item set-bg" data-setbg="{{item.image}}">
                        <div class="categories__text">
                            <h4>{{item.nom}} {{loop.index}}</h4>
                            <a href="{{item.slug}}">Acheter</a>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="section-title">
                    <h4>Nos produits</h4>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Tout</li>
                    {% for item in category %}
                    <li data-filter=".{{item.slug}}">{{item.nom |upper}}</li>
                    {% endfor %}
                    <!-- <li data-filter=".aluminium">ALUMINIUM</li>
                    <li data-filter=".vitrerie">VITRERIE</li>
                    <li data-filter=".quincailleriegeneral">QUINCAILLERIE GENERALE</li>
                    <li data-filter=".symtemeinox">SYSTEME INOX</li>
                    <li data-filter=".ferforge">FER FORGE</li> -->
                </ul>
            </div>
        </div>
        <div class="row property__gallery">
            {% for item in produit %}
            <div class="col-lg-3 col-md-4 col-sm-6 mix {{item.categorie.slug}}">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="{{item.image}}">
                        <ul class="product__hover">
                            <li><a href="{{item.image}}" class="image-popup"><span class="arrow_expand"></span></a></li>
                            <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                            <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6 class="nom__du__produit"><a href="product-details.html">{{item.nom}}</a></h6>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
